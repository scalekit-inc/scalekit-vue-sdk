{
  "name": "@scalekit/vue-sdk",
  "version": "0.1.0",
  "description": "Vue SDK for Scalekit OIDC authentication",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "vue-tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts,.vue",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "oidc-client-ts": "^3.4.0"
  },
  "peerDependencies": {
    "vue": ">=3.3.0",
    "vue-router": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "vue-router": {
      "optional": true
    }
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.3",
    "@vue/test-utils": "^2.4.4",
    "happy-dom": "^13.3.8",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2",
    "vue": "^3.4.15",
    "vue-router": "^4.2.5",
    "vue-tsc": "^1.8.27"
  },
  "keywords": [
    "scalekit",
    "oidc",
    "oauth",
    "authentication",
    "vue",
    "vue3",
    "sso",
    "pkce"
  ],
  "author": "Scalekit",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/scalekit-inc/scalekit-vue-sdk"
  }
}
